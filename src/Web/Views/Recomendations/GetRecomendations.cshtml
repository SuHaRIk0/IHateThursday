@model List<BookDto>

<!DOCTYPE html>
<html>
<head>
    <title>Recomendations</title>
</head>
<body>
    <h1>Ось, що ми для вас знайшли :)</h1>
    <table>
        <thead>
            <tr>
                <th>Назва</th>
                <th>Автор</th>
                <th>Опис</th>
                <th>Стан</th>
            </tr>
        </thead>
        <tbody>
            @for(int i=0;i < 2;i++)
            {
                <tr>
                    <td>@Model[i].Title</td>
                    <td>@Model[i].AuthorName</td>
                    <td>@Model[i].Description</td>
                    <td>@Model[i].Status</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
