@model UserProfileViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <style>
        .button-edit-profile, .button-add-book {
            background-color: #420506;
            color: #CFAE7D;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            align-self: flex-end;
            text-align: center;
            font-family: 'Kyiv*Type Titling';
            font-style: normal;
            font-weight: 200;
            font-size: 2vw;
            line-height: 3vw;
            box-shadow: 0px 1vw 1vw rgba(0, 0, 0, 0.25);
        }

            .button-edit-profile:hover, .button-add-book:hover {
                background-color: #610809;
            }

            .button-edit-profile a, .button-add-book a {
                color: #CFAE7D;
                text-decoration: none;
            }

            [type="submit"] {
            background-color: #420506;
            color: #CFAE7D;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            width: 20vw;
            heigt: 20vw;
            align-self: flex-end;
            text-align: center;
            font-family: 'Kyiv*Type Titling';
            font-style: normal;
            font-weight: 230;
            font-size: 2vw;
            line-height: 3vw;
            box-shadow: 0px 1vw 1vw rgba(0, 0, 0, 0.25);
            margin: 0.5vw;
        }

        [type="submit"]:hover {
                background-color: #610809;
            }


    </style>
</head>
<body>
    <div class="profile-container">

        <div class="back">
            <div class="profile-info">
                <p><strong>Ім'я користувача:</strong> @Model.Profile.Name</p>
                <p><strong>Tag:</strong> @Model.Profile.Tag</p>
                <p><strong>Опис профілю:</strong> @Model.Profile.Description</p>
                <p><strong>Вподобані жанри:</strong> @Model.Profile.GenresReaded</p>
                <p><strong>Кількість підписників: </strong> @Model.SubInfo.Followers_amount</p>
                <p><strong>Кількість підписок: </strong> @Model.SubInfo.Subscribtions_amount</p>


                <form asp-action="RemoveFollower" method="post" id="followersForm">
                    <input type="hidden" name="currentUserId" value="@Model.Profile.Id" />
                    <select id="followersDropdown" name="followerTag">
                        @foreach (var follower in Model.SubInfo.Followers)
                        {
                            <option value="@follower">@follower</option>
                        }
                    </select>
                    <button type="submit" class="button-action">Remove Follower</button>
                </form>

                <form asp-action="Unfollow" method="post" id="subscriptionsForm">
                    <input type="hidden" name="currentUserId" value="@Model.Profile.Id" />
                    <select id="subscriptionsDropdown" name="subscriptionTag">
                        @foreach (var sub in Model.SubInfo.Subscriptions)
                        {
                            <option value="@sub">@sub</option>
                        }
                    </select>
                    <button type="submit" class="button-action">Unfollow</button>
                </form>
            </div>
            <div>
            <div class="buttons">
                    <a class="button-add-book" asp-area="" asp-controller="Profile" asp-action="FindNewFriend" asp-route-id="@Model.Profile.Id">Find new friend</a>
                    <a class="button-edit-profile" asp-area="" asp-controller="Profile" asp-action="EditProfile" asp-route-id="@Model.Profile.Id">Редагувати профіль</a>
            </div>

            <div class="bookcase">
                <div class="bookshelf">
                    <h2>Планую читати</h2>
                    @if (Model.Books != null && Model.Books.Any())
                    {
                        @foreach (var book in Model.Books)
                        {
                            @if (book.Status == "planning")
                            {
                                <div class="book">
                                    <img src=@book.Picture />
                                    <h3>@book.Title</h3>
                                    <h5>@book.AuthorName</h5>
                                </div>
                            }
                        }
                    }
                    else
                    {
                        <p>Тут немає книжок...</p>
                    }
                </div>

                <div class="bookshelf">
                    <h2>Читаю</h2>
                    @if (Model.Books != null && Model.Books.Any())
                    {
                        @foreach (var book in Model.Books)
                        {
                            @if (book.Status == "inProgress")
                            {
                                <div class="book">
                                    <img src=@book.Picture />
                                    <h3>@book.Title</h3>
                                    <h5>@book.AuthorName</h5>
                                </div>
                            }
                        }
                    }
                    else
                    {
                        <p>Тут немає книжок...</p>
                    }
                </div>

                <div class="bookshelf">
                    <h2>Прочитані</h2>
                    @if (Model.Books != null && Model.Books.Any())
                    {
                        @foreach (var book in Model.Books)
                        {
                            @if (book.Status == "finished")
                            {
                                <div class="book">
                                    <img src=@book.Picture />
                                    <h3>@book.Title</h3>
                                    <h5>@book.AuthorName</h5>
                                </div>
                            }
                        }
                    }
                    else
                    {
                        <p>Тут немає книжок...</p>
                    }
                </div>
            </div>

            <div class="button-login"><a class="button-add-book" asp-area="" asp-controller="Book" asp-action="Add">Додати книгу</a></div>
        </div>
    </div>
</body>
</html>
