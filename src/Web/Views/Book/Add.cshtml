@model BookViewModel
 @using Microsoft.AspNetCore.Identity
 @using System.Security.Claims


<head>
    <style>
        body {
            background-color: #782223;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: 'Arial', sans-serif; 
        }

        .form-add {
            position: absolute;
            top: 15%;
            left: 0;
            right: 0;
            margin: auto;
            width: calc(100% - 50px);
            height: absolute;
            background-color: #CFAE7D;
            border-radius: 20px;
            padding: 20px;
            box-sizing: border-box;
            margin-bottom: 20px;
        }

        .input-column {
            flex-direction: column; 
            margin-right: 20px; 
        }

        .input-group {
            margin-bottom: 0px;
        }

        label {
            font-family: 'Lobster';
            font-size: 1.5vw;
            color: #782223;
            margin-bottom: 5px; 
        }

        input[type="text"] {
            width: calc(100% - 20px);
            height: 38px;
            padding: 10px;
            margin-bottom: 20px;
            border: none; 
            border-radius: 20px;
            background-color: #FFFFFF; 
            box-sizing: border-box;
        }

        .button-group {
            display: flex;
            justify-content: center; 
            margin-top: 20px; 
        }

        .input-container {
            display: flex;
            align-items: center;
        }

        input[type="submit"],
        .button-cancel {
            background-color: #420506;
            color: #CFAE7D;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            width: 20vw;
            height: 5vw;
            align-self: flex-end;
            text-align: center;
            font-family: 'Kyiv*Type Titling';
            font-style: normal;
            font-weight: 250;
            font-size: 2vw;
            line-height: 3vw;
            box-shadow: 0px 1vw 1vw rgba(0, 0, 0, 0.25);
            margin-right: 50px;
        }

            input[type="submit"]:hover,
        .button-cancel:hover {
                background-color: #610809;
            }

            .button-cancel a {
                color: #CFAE7D;
                text-decoration: none;
                display: inline-block;
                width: 10vw;
                height: 3vw;
                text-align: center;
                line-height: 3vw;
                font-size: 2vw;
            }

        .main-text p {
            margin: 0;
            width: 100%;
            font-size: 5vw;
            position: center;
            color: #610809;
        }
    </style>
</head>
<form class="form-add" method="post">
    <div class="main-text">
        <p>Додай нову книжку</p>
    </div>

    <div class="input-column">
        <div class="input-group">
            <label for="title">Назва: </label>
            <input type="text" id="title" asp-for="Title" />
        </div>

        <div class="input-group">
            <label for="author_name">Ім'я автора: </label>
            <input type="text" id="author_name" asp-for="AuthorName" />
        </div>

        <div class="input-group">
            <label for="picture">Картинка: </label>
            <input type="text" id="picture" asp-for="Picture" />
        </div>

        <div class="input-group">
            <label for="language">Мова написання: </label>
            <input type="text" id="language" asp-for="Language" />
        </div>
    </div>

    <div class="input-column">
        <div class="input-group">
            <label for="genre">Жанри: </label>
            <input type="text" id="genre" asp-for="Genre" />
        </div>

        <div class="input-group">
            <label for="description">Опис: </label>
            <input type="text" id="description" asp-for="Description" />
        </div>

        <div class="input-group">
            <label for="status">Статус: </label>
            <select class="form-select" aria-label="Не обрано" id="status" asp-for="Status">
                <option selected>Важко вирішити, але треба обрати один зі статусів</option>
                <option value="planning">Планую читати</option>
                <option value="inProgress">Читаю</option>
                <option value="finished">Прочитані</option>
            </select>
        </div>
    </div>

    <div class="input-container">
        <input type="submit" value="Додати"/>
        <a class="button-cancel" asp-area="" asp-controller="Profile" asp-action="ShowProfile" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Скасувати</a>
    </div>
    
</form>
