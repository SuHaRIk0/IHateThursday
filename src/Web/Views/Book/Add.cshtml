﻿@model Web.Models.BookViewModel

<head>
    <style>
        body {
            background-color: #782223;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            font-family: 'Arial', sans-serif; 
        }

        .form-add {
            width: 70%;
            padding: 40px;
            background-color: #CFAE7D;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            flex-wrap: wrap;
            height: 40%;
            margin-top: 5%;
            top: 20%;
        }

        .input-column {
            /* display: flex; */
            flex-direction: column; 
            margin-right: 20px; 
            /* flex: 1;  */
        }

        .input-group {
            margin-bottom: 0px;
        }

        label {
            font-family: 'Lobster';
            font-size: 1.5vw;
            color: #782223;
            margin-bottom: 5px; 
        }

        input[type="text"] {
            width: calc(100% - 20px);
            height: 38px;
            padding: 10px;
            margin-bottom: 20px;
            border: none; 
            border-radius: 20px;
            background-color: #FFFFFF; 
            box-sizing: border-box;
        }

        .button-group {
            display: flex;
            justify-content: center; 
            margin-top: 20px; 
        }

        button[type="submit"] {
            background-color: #420506;
            color: #CFAE7D;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            width: 40%; 
            font-family: 'Kyiv*Type Titling';
            font-style: normal;
            font-weight: 200;
            font-size: 2vw;
            line-height: 3vw;
            box-shadow: 0px 1vw 1vw rgba(0, 0, 0, 0.25);
        }

            button[type="submit"]:hover {
                background-color: #610809;
            }

        h2 {
            width: 70%; 
            text-align: center; 
            margin-bottom: 10px; 
        }
    </style>
</head>
<form class="form-add" method="post">
    <h2>Add new book: </h2>

    <div class="input-column">
        <div class="input-group">
            <label for="title">Title: </label>
            <input type="text" id="title" asp-for="Title" />
        </div>

        <div class="input-group">
            <label for="author_name">Author name: </label>
            <input type="text" id="author_name" asp-for="AuthorName" />
        </div>

        <div class="input-group">
            <label for="picture">Picture: </label>
            <input type="text" id="picture" asp-for="Picture" />
        </div>

        <div class="input-group">
            <label for="language">Language: </label>
            <input type="text" id="language" asp-for="Language" />
        </div>
    </div>

    <div class="input-column">
        <div class="input-group">
            <label for="genre">Genre: </label>
            <input type="text" id="genre" asp-for="Genre" />
        </div>

        <div class="input-group">
            <label for="description">Description: </label>
            <input type="text" id="description" asp-for="Description" />
        </div>

        <div class="input-group">
            <label for="status">Status: </label>
            <input type="text" id="status" asp-for="Status" />
        </div>
    </div>

    <button type="submit">Create</button>
    
</form>